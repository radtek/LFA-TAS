<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="TAS.Services" namespace="TAS.Services.Entities">
  <class name="ClaimItem" table="ClaimItem" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="Guid">
      <generator class="guid" />
    </id>
    <property name="ClaimId" />
    <property name="ClaimItemTypeId" />
    <property name="PartId" />
    <property name="ItemName" />
    <property name="ItemCode" />
    <property name="UnitPrice"  precision="18" scale="8" />
    <property name="Quantity" />
    <property name="TotalPrice"  precision="18" scale="8" />
    <property name="Remark" />
    <property name="IsGoodWillPercentage" />
    <property name="IsDiscountPercentage" />
    <property name="AuthorizedAmount"  precision="18" scale="8" />
    <property name="CurrencyPeriodId" />
    <property name="FaultId" />
    <property name="RejectionTypeId" />
    <property name="DiscountSchemeId" />
    <property name="DiscountSchemeCode" />
    <property name="SeqId"  generated="always"/>

    <property name="GoodWillAmount"  precision="18" scale="8" />
    <property name="DiscountAmount" precision="18" scale="8" />
    <property name="GoodWillRate" precision="18" scale="8" />
    <property name="DiscountRate" precision="18" scale="8" />
    <property name="TotalGrossPrice" precision="18" scale="8"/>
    <property name="ParentId" />
    <property name="ConversionRate" precision="18" scale="8" />
    <property name="TpaComment" />
    <property name="IsApproved" />
    <property name="CauseOfFailureId" />
  </class>
</hibernate-mapping>